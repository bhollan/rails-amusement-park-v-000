<h2>New Attraction</h2>
<%= form_for @attraction do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :min_height %><br>
  <%= f.number_field :min_height %><br>
  <%= f.label :happiness_rating %><br>
  <%= f.number_field :happiness_rating %><br>
  <%= f.label :nausea_rating %><br>
  <%= f.number_field :nausea_rating %><br>
  <%= f.label :tickets %><br>
  <%= f.number_field :tickets %><br>
  <% if @attraction.new_record? %>
    <%= f.submit "Create Attraction" %>
  <% else %>
    <%= f.submit "Update Attraction" %>
  <% end %>
<% end %>
