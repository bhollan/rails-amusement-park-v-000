<h2>New User</h2>
<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :height %><br>
  <%= f.number_field :height %><br>
  <%= f.label :happiness %><br>
  <%= f.number_field :happiness %><br>
  <%= f.label :nausea %><br>
  <%= f.number_field :nausea %><br>
  <%= f.label :tickets %><br>
  <%= f.number_field :tickets %><br>
  <%= f.label "You're an admin, right?" %><br>
  <%= f.check_box :admin %> of course I'm an admin<br><br>
  <%= f.submit %>
<% end %>
